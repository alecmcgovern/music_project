<link rel="stylesheet" type="text/css" href="/css/profile.css">
<nav class="navbar navbar-default" role="navigation">
	<!-- Brand and toggle get grouped for better mobile display -->
	<div class="navbar-header">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
		<a id="title" class="navbar-brand" href="/about">About</a>
	</div>

	<!-- Collect the nav links, forms, and other content for toggling -->
	<div class="collapse navbar-collapse navbar-ex1-collapse">
		<ul class="nav navbar-nav">
			<li><a id="leaderboard" href="/leaderboard">Leaderboard</a></li>
		</ul>
		<form class="navbar-form navbar-left" role="search">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Search">
			</div>
			<button type="submit" class="btn btn-default">Submit</button>
		</form>
		<ul class="nav navbar-nav navbar-right">
			<% if (currentUser) { %>
			<li><a id="username" href="/profile/<%= currentUser.username %>"><%= currentUser.username %></a></li>
			<% } %>
			<li><a id="logout" href="/logout">Logout</a></li>
		</ul>
	</div><!-- /.navbar-collapse -->
</nav>


<h1 id="un"><%= user.username %></h1>
<a id="music" href="/quiz"><button>Take the Quiz!</button></a>

<div id="favorites">
	<h4>Favorites</h4>
	<% favs.forEach(function(fav) { %>
		<div class="divfavorite">
			<h5><%= fav.song_name %> - <%= fav.artist_name %></h5>
			<audio src="<%= fav.preview_link%>" controls></audio>
			<% if(currentUser.username===user.username) { %>
				<form class="pull-right fav-form">
					<span class="fa fa-heart pull-right redfav fa-2x" data-id="<%= fav.id %>"></span>
				</form>
			<% } else { %>
					<span class="fa fa-heart-o pull-right otherfav fa-2x" data-song="<%= fav.song_name %>"
					data-artist="<%= fav.artist_name %>"
					data-preview="<%= fav.preview_link %>"
					data-itunes="<%= fav.itunes_link %>" 
					data-userId="<%= fav.userId %>"</span>
			<% } %>
		</div>
	<% }); %>
</div>

<div id="stats">
	<h4>Stats</h4>
	<h5>Correct Ids: <code><%= user.total_ids %></code></h5>
	<h5>Total Games Played: <code><%= user.song_count %></code></h5>
	<h5>Accuracy: <code><%= Math.round((user.total_ids/user.song_count)*100) %>%</code></h5>
</div>
<script type="text/javascript" src="/jscript/profile.js"></script>